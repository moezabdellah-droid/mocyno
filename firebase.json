{
  "hosting": {
    "public": "public",
    "cleanUrls": false,
    "trailingSlash": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/mobile/**",
        "destination": "/mobile/index.html"
      },
      {
        "source": "/admin/**",
        "destination": "/admin/index.html"
      },
      {
        "source": "/api/**",
        "function": {
          "functionId": "contactForm",
          "region": "europe-west1"
        }
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/a-propos",
        "destination": "/a-propos.html"
      },
      {
        "source": "/mentions-legales",
        "destination": "/mentions-legales.html"
      },
      {
        "source": "/politique-confidentialite",
        "destination": "/politique-confidentialite.html"
      },
      {
        "source": "/cookies",
        "destination": "/cookies.html"
      },
      {
        "source": "/en/contact",
        "destination": "/en/contact.html"
      },
      {
        "source": "/en/about",
        "destination": "/en/about.html"
      },
      {
        "source": "/en/legal",
        "destination": "/en/legal.html"
      },
      {
        "source": "/en/privacy",
        "destination": "/en/privacy.html"
      },
      {
        "source": "/en/cookies",
        "destination": "/en/cookies.html"
      },
      {
        "source": "/zones/saint-tropez",
        "destination": "/zones/saint-tropez.html"
      },
      {
        "source": "/zones/cannes",
        "destination": "/zones/cannes.html"
      },
      {
        "source": "/zones/nice",
        "destination": "/zones/nice.html"
      },
      {
        "source": "/zones/toulon",
        "destination": "/zones/toulon.html"
      },
      {
        "source": "/zones/ramatuelle",
        "destination": "/zones/ramatuelle.html"
      },
      {
        "source": "/zones/frejus",
        "destination": "/zones/frejus.html"
      },
      {
        "source": "/zones/sainte-maxime",
        "destination": "/zones/sainte-maxime.html"
      },
      {
        "source": "/en/zones/saint-tropez",
        "destination": "/en/zones/saint-tropez.html"
      },
      {
        "source": "/en/zones/cannes",
        "destination": "/en/zones/cannes.html"
      },
      {
        "source": "/en/zones/nice",
        "destination": "/en/zones/nice.html"
      },
      {
        "source": "/en/zones/toulon",
        "destination": "/en/zones/toulon.html"
      },
      {
        "source": "/en/zones/ramatuelle",
        "destination": "/en/zones/ramatuelle.html"
      },
      {
        "source": "/en/zones/frejus",
        "destination": "/en/zones/frejus.html"
      },
      {
        "source": "/en/zones/sainte-maxime",
        "destination": "/en/zones/sainte-maxime.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp|svg|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2592000"
          }
        ]
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}